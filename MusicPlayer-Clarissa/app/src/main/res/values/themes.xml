<resources xmlns:tools="http://schemas.android.com/tools">
  <attr name="themeColor" format="color"/><attr name="dialogTextColor" format="color"/>
    <attr name="dialogBtnBackground" format="color"/>


    //Theme for Activities
    <style name="coolPink" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="themeColor">@color/cool_pink</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/themeColor</item>
        <item name="dialogBtnBackground">?attr/themeColor</item>
        <item name="dialogTextColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
